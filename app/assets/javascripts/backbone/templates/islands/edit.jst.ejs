<form id="edit-island" action="/islands/<%= id %>" method="post">
  <div class="field">
    <label for="name"> Name</label>
    <input type="text" name="name" id="name" value="<%= name %>">
  </div>
  <div class="field">
    <label for="local-name"> Local name</label>
    <input type="text" name="name_local" id="name_local" value="<%= name_local %>">
  </div>
  <div class="field">
    <label for="iso_3">Country</label>
    <input type="text" name="iso_3" id="iso_3" value="<%= iso_3 %>">
  </div>

  <div class="field full-width">
    <input type="text" name="source" id="source" value="$SOURCE">
  </div>

  <div class="actions">
    <input type="submit" class="primary" value="<%= (id != null) ? 'Update' : 'Create' %> Island">
    <input type="submit" value="Clear">
  </div>
</form>
